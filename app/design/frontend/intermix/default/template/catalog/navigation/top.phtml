/**
 * Top menu for store
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<div class="navigation">
    <ul id="nav" class="sf-menu">
        <li onmouseover="toggleMenu(this,1)" onmouseout="toggleMenu(this,0)" class="home nav-parent" id="nav_first_over">
            <span><a href="<?php echo $this->getUrl('')?>"><?php echo $this->__('Home') ?></a></span>
        </li>
        <?php foreach ($this->getStoreCategories() as $_category): ?>
            <?php echo $this->drawItem($_category) ?>
        <?php endforeach ?>
        <?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('top_navigation')->toHtml(); ?>
    </ul>
    <div class="clear"></div>
    
    <?php echo $this->getChildHtml('topSearch') ?>        
</div>
<script type="text/javascript">
//<![CDATA[
    document.observe('dom:loaded', function () {
        var url = /[^?#]+/i.exec(document.URL)[0];
        $$('#nav a[href='+ url +']').each(function(element) {
            element.up('li').addClassName('active');
        });
    });
//]]>
</script>