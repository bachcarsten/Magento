<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Goodahead_General>
            <version>1.4.1.5</version>
        </Goodahead_General>
    </modules>
    <global>
        <blocks>
            <goodahead_general>
                <class>Goodahead_General_Block</class>
            </goodahead_general>
        </blocks>
        <models>
	        <goodahead_general>
		        <class>Goodahead_General_Model</class>
		        <resourceModel>goodahead_general_resource</resourceModel>
	        </goodahead_general>

            <goodahead_general_resource>
                <class>Goodahead_General_Model_Resource</class>

                <entities>
                    <category_product_idx>
                        <table>goodahead_general_category_product_idx</table>
                    </category_product_idx>
                </entities>
            </goodahead_general_resource>
        </models>
        <!--<index>
            <indexer>
                <goodahead_category_product>
                    <model>Goodahead_General_Model_Category_Indexer_Product</model>
                </goodahead_category_product>
            </indexer>
        </index>-->
        <resources>
            <goodahead_general_setup>
                <setup>
                    <module>Goodahead_General</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </goodahead_general_setup>
            <goodahead_general_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </goodahead_general_write>
            <goodahead_general_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </goodahead_general_read>
        </resources>
        <fieldsets>
            <sales_convert_quote_item>
                <category_id>
                    <to_order_item>*</to_order_item>
                </category_id>
            </sales_convert_quote_item>
        </fieldsets>
    </global>
    <frontend>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <goodahead_general>
                        <class>Goodahead_General_Model_Observer</class>
                        <method>addCustomAttributeToQuoteItem</method>
                        <type>singleton</type>
                    </goodahead_general>
                </observers>
            </checkout_cart_product_add_after>
        </events>
    </frontend>
    <crontab>
        <jobs>
            <catalogrule_apply_all>
                <schedule><cron_expr>0 */1 * * *</cron_expr></schedule>
                <run><model>catalogrule/observer::dailyCatalogUpdate</model></run>
            </catalogrule_apply_all>
        </jobs>
    </crontab>
</config>
