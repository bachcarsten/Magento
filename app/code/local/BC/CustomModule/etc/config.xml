<?xml version="1.0"?>
<config>
    <modules>
        <BC_CustomModule>
            <version>0.1.0</version>
        </BC_CustomModule>
    </modules>
    
    <global>
        <models>
            <custommodule>
                <class>BC_CustomModule_Model</class> 
            </custommodule>
        </models>
        <events>
            <sales_order_place_after>
                <observers>
                    <BC_CustomModule>
                        <type>singleton</type>
                        <class>custommodule/observer</class>
                        <method>orderPlaceAfter</method>
                    </BC_CustomModule>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    
    <adminhtml>
        <events>
            <sales_order_shipment_save_after>
                <observers>
                    <BC_CustomModule>
                        <type>singleton</type>
                        <class>custommodule/observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </BC_CustomModule>
                </observers>
            </sales_order_shipment_save_after>
        </events>
    </adminhtml>
</config>